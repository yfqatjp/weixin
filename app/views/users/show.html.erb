<p id="notice"><%= notice %></p>

<div class="ui link cards">
  <% if @user.courses.any? %>
    <% @user.courses.each do |course| %>
      <div class="card" data-url="#">
        <div class="image">
          <img src=<%= course.imageurl %>>
        </div>
        <div class="content">
          <div class="header"><%= course.content %></div>
          <div class="meta">
            <a><%= course.teacher %></a>
          </div>
          <div class="description"><%= course.courseinfo %></div>
        </div>
        <div class="extra content">
          <span class="right floated"><%= course.date %></span>
          <span><i class="user icon"></i><%= course.other %></span>
        </div>
      </div>
    <% end %>
  <% end %>

</div>

<script>
  jQuery('.card').click(function() {
    location.href = jQuery(this).attr('data-url');
  });
</script>



